.input
	padding-top 2px
	position relative

	&__item
		padding-left 10px
		height 41px
		width 100%
		border 1px solid #000

		&_btn
			padding-left 0
			width 87px
			height 27px
			font-size 16px
			color #fff
			border none
			border-top-left-radius 3px
			border-top-right-radius 3px
			border-bottom-left-radius 3px
			border-bottom-right-radius 3px
			background-color #f38127

		&_count
			position relative
			padding-right 21px
			padding-left 21px
			height 21px
			width 82px
			border 1px solid #aeaeae
			border-top-left-radius 4px
			border-top-right-radius 4px
			border-bottom-left-radius 4px
			border-bottom-right-radius 4px



	&_count
		display inline-block
	&__minus
	&__plus
		position absolute
		top 2px
		size 21px
		z-index 1
		text-align center
		font-size 20px
		color #fff
		background-color #aeaeae

	&__plus
		right 0
		border-bottom-right-radius 4px
		border-top-right-radius 4px
		content '+'

	&__minus
		left 0
		border-top-left-radius 4px
		border-bottom-left-radius 4px
		content '-'


	&_mail
	&_search

		&::after
			position absolute
			top 7px
			right 10px
			content ''

	&_search
		&::after
			sprite $search

	&_mail
		&::after
			top 14px
			right 14px
			width 14px
			height 14px
			size 14px
			border-right 2px solid #313130
			border-bottom 2px solid #313130
			border-radius none
			transform rotate(-45deg)

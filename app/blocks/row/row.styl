.row
	padding-top 18px
	padding-bottom 18px
	font-size 14px
	border-bottom 1px solid #aeaeae

	&:last-of-type
		border none

	&_head &

		&__cell
			font-size 14px
			color #3a3a3c

		&__cell_quant
			text-align center

		&__cell_package
			padding-left 30px

	&__cell
		display inline-block
		vertical-align top

		&_art
			width 85px

		&_name
			width 190px

		&_description
			width 175px
			font-size 12px

		&_price
			width 100px
			text-align center

		&_quant
			width 80px

		&_box
			width 170px

		&_controls

			.input
				margin-top -10px

				&_select
					margin-left 10px
					margin-right 15px

				&_count
					margin-right 10px

				&__item_btn
					width 67px


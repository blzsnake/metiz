.prod-list
	position absolute
	opacity 0
	left -1000px
	top -1px
	padding-top 15px
	width 660px
	height 100%
	background-color #fff
	transition opacity .8s ease
	border-top 1px solid #e1e1e1
	border-left 3px solid #ff6b38
	z-index 10

	&.is-active
		opacity 1
		left 100%

	&__col
		padding-left 30px
		padding-right 30px
		display inline-block
		width 49%

	&__item
		font-size 14px

	&__title
		margin-bottom 12px
		font-weight 600

	&__text
		display block
		padding-left 25px
		margin-bottom 12px
		font-weight 200
		font-size 13px
		text-decoration none
		color inherit

		&:hover
			color #ff6b38

		&_sub
			padding-left 50px

	&__title
	&__text
		position relative
		&:after
			padding-left 15px
			content attr(data-count)
			color #ff6b38



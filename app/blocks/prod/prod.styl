.prod
	padding-top 15px
	padding-left 15px
	background-color #f9f9f9
	font-size 16px

	&__img
	&__info
		display inline-block

	&__info
		padding-left 30px
		padding-left 5px
		vertical-align top


	&__title
		font-size 24px

	&__art
		font-size 18px
		padding-top 10px
		padding-bottom 30px

	&__price-old
		margin-right 15px
		position relative
		font-size 12px

		&:after
			position absolute
			left 0
			top 45%
			width 100%
			border-bottom 1px solid #ff6b38
			content ''

	&__price-new
		font-size 24px
		color #ff6b38


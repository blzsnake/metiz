.breadcrumbs
	background-color #f9f9f9
	&__item
		padding-right 20px
		position relative
		display inline-block
		text-decoration none
		color inherit
		font-size 12px
		line-height 20px

		&:after
			position absolute
			right 5px
			top 0
			content '>'

		&:last-child
			&:after
				display none


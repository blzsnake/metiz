.footer
	padding-top 16px
	padding-bottom 10px
	color #313130
	background-color #cccccc

	&__news
	&__logo
	&__search
	&__contacts
		padding-top 12px
		padding-right 18px
		display inline-block
		vertical-align top

	&__contacts
		padding-right 0

	&__logo
		padding-top 0

	&__news
		font-size 18px

	&__list
		padding-bottom 22px

	&__list-item
		margin-right 5px
		display inline-block
		text-decoration none
		color inherit

	&__copyright
		padding-top 15px
		max-width 265px
		font-size 14px
		line-height 27px

	&__contacts-phone
	&__contacts-mail
		position relative
		padding-left 36px
		font-size 24px
		&:before
			position absolute
			top 2px
			left 0
			content ''

	&__contacts-text
		margin-top 14px
		margin-bottom 20px

	&__contacts-phone
		&:before
			sprite $phone_dark

	&__contacts-mail
		margin-top 15px
		&:before
			sprite $mail_dark

	&__contacts-pays
		sprite $pay_cards

	&__news-title
		padding-bottom 20px
